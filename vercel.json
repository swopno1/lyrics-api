{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "SWAGGER_HOST": "https://lyrics-api-orpin.vercel.app"
  },

  "routes": [
    {
      "src": "/",
      "dest": "app.js"
    },
    {
      "src": "/docs",
      "dest": "/public/index.html"
    },
    {
      "src": "/swagger.json",
      "dest": "/public/swagger.json"
    },
    {
      "src": "/songs",
      "methods": ["GET", "POST"],
      "dest": "app.js"
    },
    {
      "src": "/songs/:id",
      "methods": ["GET", "PUT", "DELETE"],
      "dest": "app.js"
    },
    {
      "src": "/users",
      "methods": ["GET"],
      "dest": "app.js"
    },
    {
      "src": "/users/login",
      "methods": ["POST"],
      "dest": "app.js"
    },
    {
      "src": "/users/signup",
      "methods": ["POST"],
      "dest": "app.js"
    },
    {
      "src": "/users/update/:id",
      "methods": ["PUT"],
      "dest": "app.js"
    }
  ]
}
